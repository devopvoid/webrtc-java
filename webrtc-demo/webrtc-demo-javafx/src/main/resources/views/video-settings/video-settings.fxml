<fx:root type="VBox" styleClass="video-settings" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
	<Label text="%video.settings.capture.device"/>
	<ComboBox fx:id="captureDeviceCombo">
		<cellFactory>
			<DeviceCellFactory />
		</cellFactory>
		<buttonCell>
			<DeviceListCell />
		</buttonCell>
	</ComboBox>

	<Label text="%video.settings.capture.capabilities" styleClass="v-space"/>
	<ComboBox fx:id="captureCapabilitiesCombo">
		<cellFactory>
			<VideoCaptureCapabilityCellFactory />
		</cellFactory>
		<buttonCell>
			<VideoCaptureCapabilityListCell />
		</buttonCell>
	</ComboBox>

	<CheckBox fx:id="receiveVideoCheckBox" text="%video.settings.receive.video" styleClass="v-space" maxWidth="1.7976931348623157E308" />
	<CheckBox fx:id="sendVideoCheckBox" text="%video.settings.send.video" styleClass="v-space" maxWidth="1.7976931348623157E308" />
</fx:root>
